@model RoomReservation.Domain.Contracts.Equipment.Dtos.EquipmentDto?

<form asp-action="AddEdit" method="post">
    @if (Model is not null)
    {
        <input type="hidden" name="Id" value="@Model.Id"/>
    }
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" value="@(Model?.Name ?? string.Empty)" class="form-control" placeholder="Name"
                       required name="Name">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</form>