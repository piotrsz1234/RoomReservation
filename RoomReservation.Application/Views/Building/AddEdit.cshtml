@model RoomReservation.Domain.Contracts.Buiding.Dtos.BuildingDto?

<form asp-action="AddEdit" method="post">
    @if (Model is not null)
    {
        <input type="hidden" name="Id" value="@Model.Id"/>
    }
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="Name" required name="Name" value="@(Model?.Name ?? string.Empty)">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="mb-3">
                <label class="form-label">Street</label>
                <input type="text" class="form-control" placeholder="Street" required name="Street" value="@(Model?.Street ?? string.Empty)">
            </div>
        </div>
        <div class="col-4">
            <div class="mb-3">
                <label class="form-label">Building Number</label>
                <input type="text" class="form-control" placeholder="Building Number" required name="BuildingNumber" value="@(Model?.BuildingNumber ?? string.Empty)">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="mb-3">
                <label class="form-label">City</label>
                <input type="text" class="form-control" placeholder="City" required name="City" value="@(Model?.City ?? string.Empty)">
            </div>
        </div>
        <div class="col-4">
            <div class="mb-3">
                <label class="form-label">Postal code</label>
                <input type="text" class="form-control" placeholder="Postal code" required name="PostalCode" value="@(Model?.PostalCode ?? string.Empty)">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</form>