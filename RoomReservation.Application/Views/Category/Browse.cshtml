@model IReadOnlyCollection<RoomReservation.Domain.Contracts.Category.Dtos.CategoryDto>
@inject SessionHelper SessionHelper

@if (SessionHelper.IsAdmin)
{
    <a asp-action="AddEdit" class="btn btn-success">Add Category</a>
}

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Name</th>
        <th width="100px"></th>
        <th width="100px"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Name</th>
            @if (SessionHelper.IsAdmin)
            {
                <th>
                    <a href="/Category/AddEdit?id=@item.Id" class="btn btn-primary">Edit</a>
                </th>
                <th>
                    <a href="/Category/Remove?id=@item.Id" class="btn btn-danger">Remove</a>
                </th>
            }
            else
            {
                <th></th>
                <th></th>
            }
        </tr>
    }
    </tbody>
</table>